#!/usr/bin/env bash

# Pre-commit hook to ensure Go code is properly formatted and passes vet
# Based on: https://www.gopherguides.com/articles/dont-commit-improperly-formatted-golang-code

# Check formatting
fmtcount=`git ls-files | grep '.go$' | xargs gofmt -l 2>&1 | wc -l`
if [ $fmtcount -gt 0 ]; then
    echo "❌ Some files aren't formatted, please run 'go fmt ./...' to format your source code before committing"
    echo ""
    echo "Unformatted files:"
    git ls-files | grep '.go$' | xargs gofmt -l
    exit 1
fi

# Check vet
vetcount=`go vet ./... 2>&1 | wc -l`
if [ $vetcount -gt 0 ]; then
    echo "❌ Some files aren't passing vet heuristics, please run 'go vet ./...' to see the errors it flags and correct your source code before committing"
    exit 1
fi

echo "✅ Code is properly formatted and passes go vet"
exit 0
