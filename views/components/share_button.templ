		<!-- Toast notification for copy success -->
		<div
			id="copy-toast"
			x-show="showToast"
			x-transition:enter="transition ease-out duration-300"
			x-transition:enter-start="opacity-0 translate-y-2"
			x-transition:enter-end="opacity-100 translate-y-0"
			x-transition:leave="transition ease-in duration-200"
			x-transition:leave-start="opacity-100 translate-y-0"
			x-transition:leave-end="opacity-0 translate-y-2"
			class="fixed bottom-4 right-4 bg-green-600 text-white px-6 py-3 rounded-lg shadow-lg z-50"
			role="alert"
		>
			<div class="flex items-center gap-2">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
					<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
				</svg>
				<span>Link copied to clipboard!</span>
			</div>
		</div>
	</div>

	<!-- Alpine.js component for share dialog -->
	<script>
		function shareDialog(initialData) {
			return {
				// Base data from server
				baseURL: initialData.url || '',
				baseTitle: initialData.title || '',
				description: initialData.description || '',
				imageURL: initialData.imageURL || '',
				productSlug: initialData.productSlug || '',
				productID: initialData.productID || '',
				siteURL: initialData.siteURL || 'https://www.logans3dcreations.com',
				isAdmin: initialData.isAdmin || false,
				hasVariants: initialData.hasVariants || false,

				// Dynamic variant data (updated via events)
				variantColorId: null,
				variantSizeId: null,
				variantTitle: null,
				variantPrice: null,

				// Admin features
				shareMode: 'single', // 'single' for current variant, 'multi' for all colors grid
				showOGPreview: false,
				ogLoading: true,

				// Toast state
				showToast: false,

				// Computed current URL based on variant selection and share mode
				get currentURL() {
					// Multi-variant mode just shares the base product URL (no variant params)
					if (this.shareMode === 'multi') {
						return this.baseURL;
					}
					// Single variant mode includes variant params
					if (this.variantColorId && this.variantSizeId && this.productSlug) {
						return `${this.siteURL}/shop/product/${this.productSlug}?color=${this.variantColorId}&size=${this.variantSizeId}`;
					}
					return this.baseURL;
				},

				// Computed current title
				get currentTitle() {
					if (this.shareMode === 'multi') {
						return `${this.baseTitle} - Available in multiple colors!`;
					}
					return this.variantTitle || this.baseTitle;
				},

				// Get the OG image URL for preview (without refresh param)
				ogPreviewURL(forceRefresh = false) {
					let url;
					if (this.shareMode === 'multi') {
						url = `/api/og-image/multi/${this.productID}`;
					} else if (this.variantColorId && this.variantSizeId) {
						url = `/api/og-image/${this.productID}?color=${this.variantColorId}&size=${this.variantSizeId}`;
					} else {
						url = `/api/og-image/${this.productID}`;
					}
					if (forceRefresh) {
						url += (url.includes('?') ? '&' : '?') + 'refresh=true';
					}
					return url;
				},

				// Load OG preview (reset loading state)
				loadOGPreview() {
					this.ogLoading = true;
				},

				// Refresh OG image (force regeneration)
				refreshOGImage() {
					this.ogLoading = true;
					// Update the image source with refresh param to force regeneration
					const img = this.$refs.ogPreviewImage;
					if (img) {
						img.src = this.ogPreviewURL(true);
					}
				},

				// Handle variant selection updates from product page
				handleShareUpdate(detail) {
					if (detail) {
						if (detail.colorId !== undefined) this.variantColorId = detail.colorId;
						if (detail.sizeId !== undefined) this.variantSizeId = detail.sizeId;
						if (detail.title !== undefined) this.variantTitle = detail.title;
						if (detail.price !== undefined) this.variantPrice = detail.price;
					}
				},

				// Copy URL to clipboard
				copyToClipboard() {
					const url = this.currentURL;
					if (navigator.clipboard && window.isSecureContext) {
						navigator.clipboard.writeText(url).then(() => {
							this.showCopyToast();
						}).catch((err) => {
							console.error('Failed to copy:', err);
							this.fallbackCopy(url);
						});
					} else {
						this.fallbackCopy(url);
					}
				},

				fallbackCopy(text) {
					const textArea = document.createElement('textarea');
					textArea.value = text;
					textArea.style.position = 'fixed';
					textArea.style.left = '-999999px';
					document.body.appendChild(textArea);
					textArea.select();
					try {
						document.execCommand('copy');
						this.showCopyToast();
					} catch (err) {
						console.error('Fallback copy failed:', err);
					}
					document.body.removeChild(textArea);
				},

				showCopyToast() {
					this.showToast = true;
					setTimeout(() => {
						this.showToast = false;
					}, 3000);
				},

				// Social media URL builders
				facebookURL() {
					return `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(this.currentURL)}`;
				},

				twitterURL() {
					return `https://twitter.com/intent/tweet?url=${encodeURIComponent(this.currentURL)}&text=${encodeURIComponent(this.currentTitle)}`;
				},

				pinterestURL() {
					return `https://pinterest.com/pin/create/button/?url=${encodeURIComponent(this.currentURL)}&media=${encodeURIComponent(this.imageURL)}&description=${encodeURIComponent(this.description)}`;
				},

				whatsAppURL() {
					const message = `${this.currentTitle} ${this.currentURL}`;
					return `https://wa.me/?text=${encodeURIComponent(message)}`;
				},

				emailURL() {
					return `mailto:?subject=${encodeURIComponent(this.currentTitle)}&body=${encodeURIComponent(this.currentURL)}`;
				},

				redditURL() {
					return `https://reddit.com/submit?url=${encodeURIComponent(this.currentURL)}&title=${encodeURIComponent(this.currentTitle)}`;
				}
			};
		}
	</script>
}

// buildShareDialogInitJSON builds the initial JSON data for the share dialog Alpine component
func buildShareDialogInitJSON(props ShareButtonProps) string {
	siteURL := props.SiteURL
	if siteURL == "" {
		siteURL = "https://www.logans3dcreations.com"
	}

	return fmt.Sprintf(`{
		"url": %q,
		"title": %q,
		"description": %q,
		"imageURL": %q,
		"productSlug": %q,
		"productID": %q,
		"siteURL": %q,
		"isAdmin": %t,
		"hasVariants": %t
	}`, props.URL, props.Title, props.Description, props.ImageURL, props.ProductSlug, props.ProductID, siteURL, props.IsAdmin, props.HasVariants)
}

// Legacy helper functions (kept for backwards compatibility if needed elsewhere)

func buildFacebookShareURL(pageURL string) string {
	return fmt.Sprintf("https://www.facebook.com/sharer/sharer.php?u=%s",
		url.QueryEscape(pageURL))
}

func buildTwitterShareURL(pageURL, text string) string {
	return fmt.Sprintf("https://twitter.com/intent/tweet?url=%s&text=%s",
		url.QueryEscape(pageURL),
		url.QueryEscape(text))
}

func buildPinterestShareURL(pageURL, imageURL, description string) string {
	return fmt.Sprintf("https://pinterest.com/pin/create/button/?url=%s&media=%s&description=%s",
		url.QueryEscape(pageURL),
		url.QueryEscape(imageURL),
		url.QueryEscape(description))
}

func buildWhatsAppShareURL(pageURL, text string) string {
	message := fmt.Sprintf("%s %s", text, pageURL)
	return fmt.Sprintf("https://wa.me/?text=%s",
		url.QueryEscape(message))
}

func buildEmailShareURL(subject, body string) string {
	return fmt.Sprintf("mailto:?subject=%s&body=%s",
		url.QueryEscape(subject),
		url.QueryEscape(body))
}

func buildRedditShareURL(pageURL, title string) string {
	return fmt.Sprintf("https://reddit.com/submit?url=%s&title=%s",
		url.QueryEscape(pageURL),
		url.QueryEscape(title))
}
