package components

import (
	"fmt"
	"net/url"
	"github.com/loganlanou/logans3d-v4/components/button"
	"github.com/loganlanou/logans3d-v4/components/dialog"
)

// ShareButtonProps contains data for sharing
type ShareButtonProps struct {
	URL         string // Page URL to share
	Title       string // Share title/text
	Description string // Share description
	ImageURL    string // Image for Pinterest (absolute URL)
	ProductSlug string // For dynamic variant URL building
	ProductID   string // For OG image generation
	SiteURL     string // Base site URL for building share URLs
	IsAdmin     bool   // Whether the current user is an admin
	HasVariants bool   // Whether the product has multiple color variants
}

// ShareButton renders just the trigger button (can be placed anywhere)
templ ShareButton() {
	@dialog.Trigger(dialog.TriggerProps{
		For: "share-dialog",
	}) {
		@button.Button(button.Props{
			Variant: button.VariantOutline,
			Class:   "gap-2 border-white/20 text-white hover:bg-white/10 hover:border-white/30",
		}) {
			<!-- Share Icon (heroicons outline/share) -->
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
				<path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z"/>
			</svg>
			Share
		}
	}
}

// ShareDialog renders the dialog content (must be placed at page root level)
// Now supports dynamic updates via Alpine.js for variant-aware sharing
templ ShareDialog(props ShareButtonProps) {
	<!-- Share Dialog with Alpine.js for dynamic updates -->
	<div
		x-data={ fmt.Sprintf(`shareDialog(%s)`, buildShareDialogInitJSON(props)) }
		@share-data-update.window="handleShareUpdate($event.detail)"
	>
		@dialog.Content(dialog.ContentProps{
			ID:    "share-dialog",
			Class: "max-w-md",
		}) {
			@dialog.Header() {
				@dialog.Title() {
					Share this product
				}
			}

			<!-- Admin Share Mode Toggle (only shown for admins with variant products) -->
			<template x-if="isAdmin && hasVariants">
				<div class="px-6 pt-4 pb-2 border-b border-gray-200">
					<div class="flex items-center justify-between mb-2">
						<span class="text-sm font-medium text-gray-700">Share Mode</span>
						<button
							type="button"
							@click="showOGPreview = true; loadOGPreview()"
							class="text-xs text-blue-600 hover:text-blue-800 flex items-center gap-1"
						>
							<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4">
								<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/>
								<path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
							</svg>
							Preview OG
						</button>
					</div>
					<div class="flex rounded-lg border border-gray-300 overflow-hidden">
						<button
							type="button"
							@click="shareMode = 'single'"
							:class="shareMode === 'single' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'"
							class="flex-1 px-3 py-2 text-sm font-medium transition-colors"
						>
							Current Variant
						</button>
						<button
							type="button"
							@click="shareMode = 'multi'"
							:class="shareMode === 'multi' ? 'bg-blue-600 text-white' : 'bg-white text-gray-700 hover:bg-gray-50'"
							class="flex-1 px-3 py-2 text-sm font-medium border-l border-gray-300 transition-colors"
						>
							All Colors
						</button>
					</div>
					<p class="text-xs text-gray-500 mt-2" x-text="shareMode === 'single' ? 'Sharing the currently selected color/size variant' : 'Sharing product with grid showing all color options'"></p>
				</div>
			</template>

			<!-- OG Preview Modal (for admins) -->
			<template x-if="showOGPreview">
				<div class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4" @click.self="showOGPreview = false">
					<div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-auto">
						<div class="flex items-center justify-between p-4 border-b">
							<h3 class="font-semibold text-gray-900">OG Image Preview</h3>
							<button @click="showOGPreview = false" class="text-gray-400 hover:text-gray-600">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
								</svg>
							</button>
						</div>
						<div class="p-4">
							<div x-show="ogLoading" class="flex flex-col items-center gap-3 py-8">
								<svg class="animate-spin h-10 w-10 text-blue-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
									<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
									<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
								</svg>
								<span class="text-gray-600">Generating OG image...</span>
							</div>
							<img
								x-ref="ogPreviewImage"
								x-show="!ogLoading"
								:src="ogPreviewURL()"
								@load="ogLoading = false"
								@error="ogLoading = false"
								class="max-w-full h-auto rounded-lg"
								alt="OG Image Preview"
							/>
							<p class="text-xs text-gray-500 mt-3 text-center">
								This is how the image will appear when shared on social media
							</p>
						</div>
						<div class="flex justify-between items-center p-4 border-t">
							<button
								type="button"
								@click="refreshOGImage()"
