templ StepCustomization() {
	<div>
		<h2 class="text-3xl font-bold text-white mb-12 text-center">
			<span class="bg-gradient-to-r from-blue-300 to-emerald-400 bg-clip-text text-transparent">Customize Your Print</span></h2>
		
		<!-- Material Selection -->
		<div class="mb-8">
