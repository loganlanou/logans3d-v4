				</a>

				<a href="/admin/events" class="admin-sidebar-item" @click="mobileSidebarOpen = false">
					<svg class="admin-sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
					</svg>
					<span class="admin-sidebar-text">Events</span>
				</a>

				<a href="/admin/contacts" class="admin-sidebar-item" @click="mobileSidebarOpen = false">
					<svg class="admin-sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					<span class="admin-sidebar-text">Contacts</span>
				</a>

				<a href="/admin/email-preview" class="admin-sidebar-item" @click="mobileSidebarOpen = false">
					<svg class="admin-sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
					</svg>
					<span class="admin-sidebar-text">Email Preview</span>
				</a>

				<!-- Shipping Section (Collapsible) -->
				<div>
					<button
						@click="mobileShippingOpen = !mobileShippingOpen"
						class="admin-sidebar-item w-full"
						title="Shipping"
					>
						<svg class="admin-sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
						</svg>
						<span class="admin-sidebar-text flex-1 text-left">Shipping</span>
						<svg
							class="w-4 h-4 transition-transform duration-200"
							:class="{ 'rotate-180': mobileShippingOpen }"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>

					<!-- Shipping Sub-items -->
					<div x-show="mobileShippingOpen" x-collapse class="ml-6 mt-1 space-y-1">
						<a href="/admin/shipping/boxes" class={ getSubitemClass(c, "/admin/shipping/boxes") } @click="mobileSidebarOpen = false" title="Boxes">
							<span class="admin-sidebar-text">Boxes</span>
						</a>
						<a href="/admin/shipping/config" class={ getSubitemClass(c, "/admin/shipping/config") } @click="mobileSidebarOpen = false" title="Configuration">
							<span class="admin-sidebar-text">Configuration</span>
						</a>
						<a href="/admin/shipping/settings" class={ getSubitemClass(c, "/admin/shipping/settings") } @click="mobileSidebarOpen = false" title="Settings">
							<span class="admin-sidebar-text">Settings</span>
						</a>
					</div>
				</div>

				<!-- Developer Section (Collapsible) -->
				<div>
					<button
						@click="mobileDevOpen = !mobileDevOpen"
						class="admin-sidebar-item w-full"
						title="Developer Tools"
					>
						<svg class="admin-sidebar-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
						</svg>
						<span class="admin-sidebar-text flex-1 text-left">Developer</span>
						<svg
							class="w-4 h-4 transition-transform duration-200"
							:class="{ 'rotate-180': mobileDevOpen }"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
						</svg>
					</button>

					<!-- Developer Sub-items -->
					<div x-show="mobileDevOpen" x-collapse class="ml-6 mt-1 space-y-1">
						<a href="/dev" class={ getSubitemClass(c, "/dev") } @click="mobileSidebarOpen = false" title="Overview">
							<span class="admin-sidebar-text">Overview</span>
						</a>
						<a href="/dev/system" class={ getSubitemClass(c, "/dev/system") } @click="mobileSidebarOpen = false" title="System Info">
							<span class="admin-sidebar-text">System Info</span>
						</a>
						<a href="/dev/database" class={ getSubitemClass(c, "/dev/database") } @click="mobileSidebarOpen = false" title="Database">
							<span class="admin-sidebar-text">Database</span>
						</a>
						<a href="/dev/memory" class={ getSubitemClass(c, "/dev/memory") } @click="mobileSidebarOpen = false" title="Memory">
							<span class="admin-sidebar-text">Memory</span>
						</a>
						<a href="/dev/logs" class={ getSubitemClass(c, "/dev/logs") } @click="mobileSidebarOpen = false" title="Logs">
							<span class="admin-sidebar-text">Logs</span>
						</a>
						<a href="/dev/config" class={ getSubitemClass(c, "/dev/config") } @click="mobileSidebarOpen = false" title="Config">
							<span class="admin-sidebar-text">Config</span>
						</a>
					</div>
				</div>
			</nav>

			<!-- Mobile Sidebar Footer -->
			<div class="mt-auto admin-sidebar-footer">
				if user, ok := auth.GetDBUser(c); ok {
					<div class="flex items-center space-x-3 p-3 bg-slate-800 rounded-lg">
						if user.ProfileImageUrl.Valid {
							<img src={ user.ProfileImageUrl.String } alt="Admin" class="h-8 w-8 rounded-full"/>
						} else {
							<div class="h-8 w-8 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
								<span class="text-white text-sm font-bold">{ user.FullName[:1] }</span>
							</div>
						}
						<div class="flex-1 min-w-0">
							<p class="text-sm font-medium text-slate-200 truncate">{ user.FullName }</p>
							<p class="text-xs text-slate-400 truncate">Administrator</p>
						</div>
					</div>
				}
			</div>
		</div>
	</aside>
}

templ AdminContainer() {
	<div class="admin-container">
		{ children... }
	</div>
}