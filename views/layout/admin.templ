package layout

import (
	"os"
	"strings"
	"github.com/labstack/echo/v4"
	"github.com/loganlanou/logans3d-v4/internal/auth"
	"github.com/loganlanou/logans3d-v4/components/dialog"
)

func getAlpineData(c echo.Context) string {
	path := c.Request().URL.Path
	isDevPage := strings.HasPrefix(path, "/dev")
	isShippingPage := strings.HasPrefix(path, "/admin/shipping")
	isSalesPage := strings.HasPrefix(path, "/admin/orders") || strings.HasPrefix(path, "/admin/carts") || strings.HasPrefix(path, "/admin/abandoned-carts") || strings.HasPrefix(path, "/admin/quotes")
	if isDevPage {
		return "{ sidebarOpen: true, mobileSidebarOpen: false, devOpen: true, mobileDevOpen: true, shippingOpen: false, mobileShippingOpen: false, salesOpen: false, mobileSalesOpen: false }"
	}
	if isShippingPage {
		return "{ sidebarOpen: true, mobileSidebarOpen: false, devOpen: false, mobileDevOpen: false, shippingOpen: true, mobileShippingOpen: true, salesOpen: false, mobileSalesOpen: false }"
	}
	if isSalesPage {
		return "{ sidebarOpen: true, mobileSidebarOpen: false, devOpen: false, mobileDevOpen: false, shippingOpen: false, mobileShippingOpen: false, salesOpen: true, mobileSalesOpen: true }"
	}
	return "{ sidebarOpen: true, mobileSidebarOpen: false, devOpen: false, mobileDevOpen: false, shippingOpen: false, mobileShippingOpen: false, salesOpen: false, mobileSalesOpen: false }"
}

func getSubitemClass(c echo.Context, targetPath string) string {
	currentPath := c.Request().URL.Path
	if currentPath == targetPath {
		return "admin-sidebar-subitem active"
	}
	return "admin-sidebar-subitem"
}

templ AdminBase(c echo.Context, title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } - Admin - Logan's 3D Creations</title>
			<meta name="robots" content="noindex, nofollow"/>
			<meta name="theme-color" content="#0f172a"/>

			<!-- Favicon -->
			<link rel="icon" type="image/png" sizes="32x32" href="/public/images/favicon.png"/>

			<!-- Admin CSS -->
			<link rel="stylesheet" href="/public/css/admin-styles.css"/>
			<link rel="stylesheet" href="/public/css/developer-styles.css"/>

			<!-- Clerk JS SDK for automatic token refresh -->
			<script
				data-clerk-publishable-key={ os.Getenv("CLERK_PUBLISHABLE_KEY") }
				src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"
				crossorigin="anonymous"
			></script>

			<!-- HTMX for dynamic updates -->
			<script src="https://unpkg.com/htmx.org@1.9.10"></script>

			<!-- Alpine.js for interactivity -->
			<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
			<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

			<!-- templUI dialog component -->
			@dialog.Script()
			<script defer nonce={ templ.GetNonce(ctx) } src="/public/js/chart.min.js"></script>
		</head>
		<body class="admin-root" x-data={ getAlpineData(c) }>
			<!-- Sidebar -->
			@AdminSidebar(c)

			<!-- Main Content Area -->
			<div class="admin-content-wrapper" :class="{ 'admin-content-expanded': !sidebarOpen }">
				<!-- Page Content -->
				<div class="admin-main">
					{ children... }
				</div>
			</div>

			<!-- Mobile Sidebar Overlay -->
			<div
				x-show="mobileSidebarOpen"
				x-cloak
				@click="mobileSidebarOpen = false"
				class="fixed inset-0 bg-black bg-opacity-50 z-40 lg:hidden"
				x-transition:enter="transition-opacity ease-linear duration-300"
				x-transition:enter-start="opacity-0"
				x-transition:enter-end="opacity-100"
				x-transition:leave="transition-opacity ease-linear duration-300"
				x-transition:leave-start="opacity-100"
				x-transition:leave-end="opacity-0"
			></div>

			<!-- Initialize Clerk for automatic token refresh -->
			<script>
				window.addEventListener('load', async function() {
					try {
						await window.Clerk.load();
						console.log('Clerk loaded successfully in admin panel');

						// Set up proactive token refresh for admin dashboard
						// Check every 30 seconds if token needs refresh
						setInterval(async () => {
							try {
								const session = window.Clerk.session;
								if (session) {
									// Get token with explicit refresh check
									// This will trigger refresh if token is close to expiry
									await session.getToken({ skipCache: true });
									console.log('Admin: Token refresh check completed');
								}
							} catch (err) {
								console.error('Admin: Token refresh failed:', err);
								// If refresh fails, redirect to login
								if (err.message && err.message.includes('session')) {
									window.location.href = '/login?redirect=' + encodeURIComponent(window.location.pathname);
								}
							}
						}, 30000); // Check every 30 seconds
					} catch (err) {
						console.error('Failed to load Clerk in admin panel:', err);
					}
				});
			</script>
		</body>
	</html>
}

templ AdminSidebar(c echo.Context) {
