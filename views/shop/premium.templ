type CollectionTier struct {
	Name          string
	Slug          string
	Description   string
	Price         int64
	OriginalPrice int64
	Discount      int
	Items         int
	Color         string
	GradientFrom  string
	GradientTo    string
	IconEmoji     string
	Features      []string
	Products      []ProductWithImage
}

